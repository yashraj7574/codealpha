#include<stdio.h>


double sum(double , double);
double sub(double , double);
double product(double , double);
double div(double , double);

int main()
{	
	double num1;
	double num2;
	int choice;
	
	do{
		printf("\n======================MENU======================");
		printf("\n********INITIATING THE CALCULATOR*********");
		printf("\n1.Sum of the two values.");
		printf("\n2.Subtraction of two values.");
		printf("\n3.Multiplication of two values.");
		printf("\n4.Division of two values.");
		printf("\n5.End");
		printf("\n************************************************");
		
		printf("\n\nEnter your choice:- ");
		scanf("%d", &choice);
		
		if(choice >= 1 && choice <= 5)
		{
			
			switch(choice)
			{	
				case 1:
						printf("\nEnter the value of num1 is:- ");
						scanf("%lf", &num1);
						
						printf("\nEnter the value of num2 is:- ");
						scanf("%lf", &num2);
						
						double Addition = sum(num1 , num2);
						
						printf("\nNum1:- %lf", num1);
						printf("\nNum2:- %lf", num2);
						printf("\nThe sum of two numbers:- %lf", Addition);
				
				break;
				
				case 2:
						printf("\nEnter the value of num1 is:- ");
						scanf("%lf", &num1);
						
						printf("\nEnter the value of num2 is:- ");
						scanf("%lf", &num2);
						
						double Subtraction = sub(num1 , num2);
						
						printf("\nNum1:- %lf", num1);
						printf("\nNum2:- %lf", num2);
						printf("\nThe Subtraction of two numbers:- %lf", Subtraction);
						
				break;
				
				case 3:
						printf("\nEnter the value of num1 is:- ");
						scanf("%lf", &num1);
						
						printf("\nEnter the value of num2 is:- ");
						scanf("%lf", &num2);
						
						double Multiplication = product(num1 , num2);
						
						printf("\nNum1:- %lf", num1);
						printf("\nNum2:- %lf", num2);
						printf("\nThe Multiplication of two numbers:- %lf", Multiplication);
						
				break;
				
				case 4:
						printf("\nEnter the value of num1 is:- ");
						scanf("%lf", &num1);
						
						printf("\nEnter the value of num2 is:- ");
						scanf("%lf", &num2);
						
						double Division = div(num1 , num2);
						
						printf("\nNum1:- %lf", num1);
						printf("\nNum2:- %lf", num2);
						printf("\nThe division of two numbers:- %lf", Division);
					
				break;
				
				case 5:
					
						printf("********Thank you.********");
				
				break;
				
				default:
					
						printf("\nInvalid Input. Please enter the choice between 1 to 5.");
				
				break;
				
			}
		}
		
		else
		{	
			printf("\nInvalid Input. Please enter the choice between 1 to 5.");
		}
			
	}while(choice != 5);
	
	return 0;
}

double sum(double num1 , double num2)
{	
	return(num1 + num2);
}

double sub(double num1 , double num2)
{	
	return(num1 - num2);
}

double product(double num1 , double num2)
{	
	return(num1 * num2);
}

double div(double num1 , double num2)
{
	return(num1 / num2);
}



